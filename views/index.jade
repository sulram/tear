extends layout

block content
  .navbar.navbar-fixed-top
    .navbar-header
      a.navbar-brand(href='/') t.e.a.r.
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/pads')
            i.fa.fa-align-justify
  .container.mt100
    h1 t.e.a.r.
    h4 textos entrelaçados por associações e relações.
    p uma máquina para tecer e visualizar redes de palavras em tempo real
    hr
    if authenticated_p
      form(action='pad',method='POST').form-inline.form-square
        .form-group
          input(type='text',name='slug',placeholder='digite o nome do arquivo',style='width:300px;').form-control
        .form-group
          input(type='submit',value='entrar').btn.btn-square.btn-default
    else
      div.fb-login-button(data-max-rows="1",data-size="medium",data-show-faces="false",data-auto-logout-link="false")